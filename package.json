{
  "name": "BASIC_SERVICE",
  "version": "1.0.0",
  "description": "Basic template for single docker microservice in nide.js",
  "main": "dist/main.js",
  "scripts": {
    "test": "NODE_ENV=test env-cmd -e test jest --passWithNoTests",
    "test:ci": "yarn test --ci",
    "dev:tsc": "yarn build --watch",
    "dev:serve": "nodemon -e js -w dist dist/main.js",
    "dev": "run-p 'dev:*'",
    "lint": "run-s 'lint:*' -- .",
    "lint:types": "tsc --noEmit",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint --cache",
    "lint:duplicates": "jscpd",
    "build": "tsc",
    "prepare": "husky install"
  },
  "author": "Farah Hameed <fhd@amboss.com>",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node-lts-strictest": "^18.12.1",
    "@types/hapi__hapi": "^21.0.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.2",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "env-cmd": "^10.1.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jscpd": "^3.5.10",
    "lint-staged": "^14.0.1",
    "nock": "^13.3.3",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^10.2.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@hapi/hapi": "^21.3.2",
    "@sentry/node": "^7.73.0",
    "dd-trace": "^4.16.0",
    "hapi-pino": "^12.1.0",
    "hapi-sentry": "^4.0.0"
  },
  "packageManager": "yarn@3.3.0"
}
